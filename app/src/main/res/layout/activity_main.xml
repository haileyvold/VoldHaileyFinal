<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="css.cis3334hailey.voldhaileyfinal.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">
        android:layout_weight="3.0">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Greenhouse"
            android:id="@+id/textView"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="36sp"
            android:fontFamily="serif-monospace"
            android:textAlignment="center"
            android:typeface="monospace"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_weight=".01" />

        <ListView
            android:layout_width="match_parent"
            android:id="@+id/listViewPlants"
            android:choiceMode="singleChoice"
            android:clickable="false"
            android:layout_marginBottom="29dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_height="332dp"
            android:layout_weight="3.0" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1.09">
            android:layout_weight="3.0">


            <Button
                android:text="Add Plant"
                android:layout_width="121dp"
                android:id="@+id/buttonAddPlant"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                android:textAllCaps="false"
                android:textSize="24sp"
                android:backgroundTint="@android:color/holo_green_dark"
                android:fontFamily="serif-monospace"
                android:layout_height="83dp" />

            <Button
                android:text="Delete Plant"
                android:layout_width="120dp"
                android:id="@+id/buttonDeletePlant"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                android:textAllCaps="false"
                android:textSize="24sp"
                android:backgroundTint="@android:color/holo_green_dark"
                android:fontFamily="serif-monospace"
                android:layout_height="83dp" />

            <Button
                android:text="Enter New"
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:id="@+id/buttonEnterPlant"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                android:textAllCaps="false"
                android:textSize="24sp"
                android:backgroundTint="@android:color/holo_green_dark"
                android:fontFamily="serif-monospace" />


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>